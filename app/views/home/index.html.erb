<div class="container">
    <h1>Best Seller </h1></br>

      <% @best_seller_lipsticks.in_groups_of(3) do |group| %>
        <div class="row">
          <% group.compact.each do |lipstick| %>
            <div class="col-md-4">
              <%= image_tag lipstick.image_url(:thumb) if lipstick.image? %>
              <h4><%= link_to lipstick.name, @lipstick %></h4>
              <%= lipstick.brand %></br>
              <%= lipstick.description %></br>
              <%= lipstick.price %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>