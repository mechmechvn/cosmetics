<h1>Lipsticks</h1>

<% @lipsticks.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |lipstick| %>

      <div class="col-md-4">
        <%= image_tag lipstick.image_url(:thumb) if lipstick.image? %>
        <h4><%= link_to lipstick.name, @lipstick %></h4>

        <%= link_to 'Show', lipstick_path(lipstick.id) %></br>
        <%= link_to 'Edit', edit_lipstick_path(lipstick.id) %></br>
        <%= link_to 'Destroy', lipstick, method: :delete, data: { confirm: "Do you want to delete this lipstick?" } %></br>
        <tr>
          <th>Brand: </th>
          <td><%= lipstick.brand%> </td>
        </tr></br>
        <tr>
          <th>Price: </th>
          <td><%= lipstick.price%> </td>
        </tr></br>
      </div>

    <% end %>
  </div>
<% end %>
