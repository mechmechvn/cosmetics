  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h1>Lipsticks</h1>
        <% @lipsticks.in_groups_of(3) do |group| %>
        <table class="table table-striped table-condensed">
          <%=group.compact.each do |lipstick| %>
          <%= image_tag lipstick.image_url(:thumb) if lipstick.image? %>
          <h4><%= link_to lipstick.name, @lipstick %></h4>

          <%= link_to 'Show', lipstick_path(lipstick.id) %>
          <%= link_to 'Edit', edit_lipstick_path(lipstick.id) %>
          <%= link_to 'Destroy', lipstick, method: :delete, data: { confirm: "Do you want to delete this lipstick?" } %>
          <tr>
          <th>Brand: </th>
          <td><%= lipstick.brand%> </td>
          </tr>
          <tr>
          <th>Price: </th>
          <td><%= lipstick.price%> </td>
          </tr>

          <% end %>
        </table>
        <% end %>
      </div>
    </div>
  </div>
