<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>New lipstick</h1>
      <%= form_for(@lipstick) do |f| %>
        <div class="field">
          <%= f.label :name%>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name ' %>
        </div></br>

        <div class="field">
          <%= f.label :brand %>
          <%= f.text_field :brand, class: 'form-control', placeholder: 'Brand' %>
        </div></br>

        <div class="field">
          <%= f.label :is_best_seller %>
          <%= f.radio_button :is_best_seller, "1" %>Yes
          <%= f.radio_button :is_best_seller, "0" %>No
        </div></br>

        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control', placeholder: 'Description' %>
        </div></br>

        <div class="field">
          <%= f.label :price %>
          <%= f.number_field :price, class: 'form-control', placeholder: 'Price' %>
        </div></br>

        <div class="actions">
          <%= f.label :image %>
          <%= f.file_field :image, id: :lipstick_image %>
        </div>

        <div class="actions">
          <%= f.submit class: 'btn btn-success pull-right'%>
        </div>

      <% end %>
    </div>
  </div>
</div>