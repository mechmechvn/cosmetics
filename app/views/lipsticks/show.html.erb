
      <h1><%= @lipstick.name %></h1>
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
          <%= image_tag(@lipstick.image_url) if @lipstick.image? %></br>

            <p>Brand:
            <%= @lipstick.brand%></p>


            <p>Description:
            <%= @lipstick.description %></p>


            <p>Price:
            <%= @lipstick.price %></p>

            <%= link_to 'Edit', edit_lipstick_path(@lipstick.id) %>
            <%= link_to 'Destroy', @lipstick, method: :delete, data: { confirm: "Do you want to delete this lipstick?" } %>

          </div>
        </div>
      </div>
