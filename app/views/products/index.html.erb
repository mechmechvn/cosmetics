<div class="container">
    <h1> Listing product </h1></br>
      <% @products.in_groups_of(3) do |group| %>
        <div class="row">
          <% group.compact.each do |product| %>
            <div class="col-md-4">
              <%#= image_tag product.image_url(:thumb) if product.image? %>
              <h4><%= link_to product.name, @product %></h4>
              <%= product.brand.name %></br>
              <%= product.description %></br>
              <%= link_to 'Show', product_path(product.id) %>
            </div>
          <% end %>

        </div>
      <% end %>
    </div>
  </div>
</div>



