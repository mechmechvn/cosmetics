
      <h1><%= @product.name %></h1>
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
          <%#= image_tag(@lipstick.image_url) if @lipstick.image? %></br>

            <p>Brand:
            <%= @product.brand.name %></p>


            <p>Description:
            <%= @product.description %></p>


            <p>Price:
            <%= @product.price %></p>

            <p>Sale Price:
            <%= @product.sale_price %></p>

            <%= link_to 'Edit', edit_product_path(@product.id) %>
            <%= link_to 'Destroy', @product, method: :delete, data: { confirm: "Do you want to delete this product?" } %>

          </div>
        </div>
      </div>
